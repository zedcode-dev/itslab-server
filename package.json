{
  "name": "itslab-server",
  "version": "1.0.0",
  "description": "ITSLab Online Learning Platform - Enterprise Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:reset": "npm run migrate && npm run seed",
    "logs:clear": "rm -rf logs/*.log",
    "pm2:start": "pm2 start server.js --name itslab-api",
    "pm2:stop": "pm2 stop itslab-api",
    "pm2:restart": "pm2 restart itslab-api",
    "pm2:logs": "pm2 logs itslab-api",
    "pm2:delete": "pm2 delete itslab-api"
  },
  "keywords": [
    "education",
    "learning-platform",
    "e-learning",
    "lms",
    "online-courses",
    "iti",
    "nodejs",
    "express",
    "postgresql",
    "jwt"
  ],
  "author": "ITSLab Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.35.2",
    "shaka-packager-static": "^2.6.1",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!database/**",
      "!logs/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "logs",
      "coverage"
    ],
    "ext": "js,json",
    "watch": [
      "server.js",
      "config/**/*.js",
      "controllers/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "utils/**/*.js"
    ]
  }
}
